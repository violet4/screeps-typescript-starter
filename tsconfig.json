{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2018",
      "dom",
    ],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "types": [
      "./node_modules/@types/screeps",
      "./src/creep/Creep.d.ts",
      "./src/main.d.ts",
      "./src/creep/memory/CreepMemory.d.ts",
    ],
  },
  "exclude": [
    "node_modules",
  ],
}
