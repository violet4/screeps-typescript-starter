{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2018",
      "dom", // need this just to get console.log?
    ],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "types": [
      "./src/creep/Creeper",
      "./src/main",
      "./src/creep/memory/CreepMemory",
      "./node_modules/@types/screeps",
      "./node_modules/@types/node",
      "./node_modules/@types/lodash",
    ],
  },
  "exclude": [
    "node_modules",
  ],
}
